{
  "name": "funtech.agency-slider-test",
  "version": "1.0.0",
  "description": "Адаптивный слайдер карточек NFT для тестового задания на должность фронтенд-разработчика в [Funtech Agency](https://funtech.agency)",
  "repository": "https://github.com/qwars/funtech.agency-slider-test",
  "author": "Селюнин Александр Николаевич",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "yarn lint:ts:fix && yarn lint:css:fix",
    "lint:ts": "biome check src",
    "lint:ts:fix": "biome check src --fix",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:css:fix": "stylelint \"src/**/*.scss\" --fix",
    "format": "yarn format:ts && yarn format:scss",
    "format:ts": "biome format src --write",
    "format:scss": "prettier --write \"src/**/*.scss\""
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "framer-motion": "^12.33.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "postcss": "^8.5.6",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "stylelint": "^17.1.1",
    "stylelint-config-recess-order": "^7.6.1",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-order": "^7.0.1",
    "vite": "^7.3.1"
  }
}
