{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "linter": { "enabled": true, "rules": { "recommended": true } },
  "formatter": {
    "files": {
      "ignore": [
        "node_modules",
        "dist",
        ".vite",
        "coverage",
        ".next",
        "build",
        "Dockerfile",
        "Dockerfile.dev",
        "**/*.scss",
        "**/*.md",
        "**/*.json"
      ]
    },
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": { "formatter": { "quoteStyle": "single" } }
}
